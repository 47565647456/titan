@page "/itemtypes"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Orleans
@using Titan.Abstractions.Grains
@using Titan.Abstractions.Models
@attribute [Authorize(Policy = "Viewer")]
@inject IClusterClient ClusterClient
@inject ILogger<ItemTypes> Logger

<PageTitle>Item Types - Titan Admin</PageTitle>

<div class="page-container">
    <div class="page-header">
        <h1>üì¶ Item Types</h1>
        <p class="subtitle">Manage game item definitions</p>
    </div>

    <AuthorizeView Policy="Admin">
        <Authorized>
            <div class="actions-bar">
                <button class="btn btn-primary" @onclick="ShowCreateDialog">
                    ‚ûï Create Item Type
                </button>
            </div>
        </Authorized>
    </AuthorizeView>

    @if (IsLoading)
    {
        <div class="loading">Loading item types...</div>
    }
    else if (ItemTypeList == null || ItemTypeList.Count == 0)
    {
        <div class="empty-state">
            <p>No item types found.</p>
        </div>
    }
    else
    {
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Stack Size</th>
                        <th>Tradeable</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ItemTypeList)
                    {
                        <tr>
                            <td><code>@item.ItemTypeId</code></td>
                            <td>@item.Name</td>
                            <td>@(item.Category ?? "‚Äî")</td>
                            <td>@item.MaxStackSize</td>
                            <td>@(item.IsTradeable ? "‚úÖ" : "‚ùå")</td>
                            <td>
                                <AuthorizeView Policy="Admin">
                                    <Authorized>
                                        <button class="btn btn-small btn-secondary" @onclick="() => ShowEditDialog(item)">Edit</button>
                                        <button class="btn btn-small btn-danger" @onclick="() => ShowDeleteDialog(item)">Delete</button>
                                    </Authorized>
                                </AuthorizeView>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (ShowDialog)
    {
        <div class="modal-overlay" @onclick="CloseDialog">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h2>@(IsEditing ? "Edit Item Type" : "Create Item Type")</h2>
                
                <EditForm Model="EditModel" OnValidSubmit="SaveItemTypeAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-group">
                        <label>Item Type ID</label>
                        <InputText @bind-Value="EditModel!.ItemTypeId" class="form-control" disabled="@IsEditing" />
                        <ValidationMessage For="() => EditModel!.ItemTypeId" />
                    </div>
                    
                    <div class="form-group">
                        <label>Name</label>
                        <InputText @bind-Value="EditModel!.Name" class="form-control" />
                        <ValidationMessage For="() => EditModel!.Name" />
                    </div>
                    
                    <div class="form-group">
                        <label>Description</label>
                        <InputTextArea @bind-Value="EditModel!.Description" class="form-control" rows="3" />
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label>Category</label>
                            <InputText @bind-Value="EditModel!.Category" class="form-control" />
                        </div>
                        
                        <div class="form-group">
                            <label>Max Stack Size</label>
                            <InputNumber @bind-Value="EditModel!.MaxStackSize" class="form-control" />
                        </div>
                    </div>
                    
                    <div class="form-group checkbox-group">
                        <InputCheckbox @bind-Value="EditModel!.IsTradeable" />
                        <label>Tradeable</label>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger">@ErrorMessage</div>
                    }
                    
                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary" @onclick="CloseDialog">Cancel</button>
                        <button type="submit" class="btn btn-primary" disabled="@IsSaving">
                            @(IsSaving ? "Saving..." : "Save")
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    @if (ShowDeleteConfirm)
    {
        <div class="modal-overlay" @onclick="CloseDeleteDialog">
            <div class="modal-content modal-small" @onclick:stopPropagation="true">
                <h2>‚ö†Ô∏è Delete Item Type</h2>
                <p>Are you sure you want to delete <strong>@DeleteTarget?.Name</strong>?</p>
                <p class="text-muted">This action cannot be undone.</p>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" @onclick="CloseDeleteDialog">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="DeleteItemTypeAsync" disabled="@IsDeleting">
                        @(IsDeleting ? "Deleting..." : "Delete")
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private IReadOnlyList<ItemTypeDefinition>? ItemTypeList { get; set; }
    private bool IsLoading { get; set; } = true;
    private bool ShowDialog { get; set; }
    private bool ShowDeleteConfirm { get; set; }
    private bool IsEditing { get; set; }
    private bool IsSaving { get; set; }
    private bool IsDeleting { get; set; }
    private string? ErrorMessage { get; set; }
    private ItemTypeEditModel? EditModel { get; set; }
    private ItemTypeDefinition? DeleteTarget { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadItemTypesAsync();
    }

    private async Task LoadItemTypesAsync()
    {
        IsLoading = true;
        try
        {
            var grain = ClusterClient.GetGrain<IItemTypeRegistryGrain>("default");
            ItemTypeList = await grain.GetAllAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load item types");
            ErrorMessage = "Failed to load item types";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ShowCreateDialog()
    {
        EditModel = new ItemTypeEditModel();
        IsEditing = false;
        ErrorMessage = null;
        ShowDialog = true;
    }

    private void ShowEditDialog(ItemTypeDefinition item)
    {
        EditModel = new ItemTypeEditModel
        {
            ItemTypeId = item.ItemTypeId,
            Name = item.Name,
            Description = item.Description,
            Category = item.Category,
            MaxStackSize = item.MaxStackSize,
            IsTradeable = item.IsTradeable
        };
        IsEditing = true;
        ErrorMessage = null;
        ShowDialog = true;
    }

    private void CloseDialog()
    {
        ShowDialog = false;
        EditModel = null;
    }

    private void ShowDeleteDialog(ItemTypeDefinition item)
    {
        DeleteTarget = item;
        ShowDeleteConfirm = true;
    }

    private void CloseDeleteDialog()
    {
        ShowDeleteConfirm = false;
        DeleteTarget = null;
    }

    private async Task SaveItemTypeAsync()
    {
        if (EditModel == null) return;
        
        IsSaving = true;
        ErrorMessage = null;
        
        try
        {
            var grain = ClusterClient.GetGrain<IItemTypeRegistryGrain>("default");
            var definition = new ItemTypeDefinition
            {
                ItemTypeId = EditModel.ItemTypeId,
                Name = EditModel.Name,
                Description = EditModel.Description,
                Category = EditModel.Category,
                MaxStackSize = EditModel.MaxStackSize,
                IsTradeable = EditModel.IsTradeable
            };

            if (IsEditing)
            {
                await grain.UpdateAsync(definition);
                Logger.LogInformation("Updated item type: {ItemTypeId}", definition.ItemTypeId);
            }
            else
            {
                await grain.RegisterAsync(definition);
                Logger.LogInformation("Created item type: {ItemTypeId}", definition.ItemTypeId);
            }

            CloseDialog();
            await LoadItemTypesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to save item type");
            ErrorMessage = ex.Message;
        }
        finally
        {
            IsSaving = false;
        }
    }

    private async Task DeleteItemTypeAsync()
    {
        if (DeleteTarget == null) return;
        
        IsDeleting = true;
        
        try
        {
            var grain = ClusterClient.GetGrain<IItemTypeRegistryGrain>("default");
            await grain.DeleteAsync(DeleteTarget.ItemTypeId);
            Logger.LogInformation("Deleted item type: {ItemTypeId}", DeleteTarget.ItemTypeId);
            
            CloseDeleteDialog();
            await LoadItemTypesAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to delete item type");
        }
        finally
        {
            IsDeleting = false;
        }
    }

    private sealed class ItemTypeEditModel
    {
        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.StringLength(100, MinimumLength = 1)]
        public string ItemTypeId { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required]
        [System.ComponentModel.DataAnnotations.StringLength(200, MinimumLength = 1)]
        public string Name { get; set; } = "";

        public string? Description { get; set; }
        public string? Category { get; set; }
        
        [System.ComponentModel.DataAnnotations.Range(1, 9999)]
        public int MaxStackSize { get; set; } = 1;
        
        public bool IsTradeable { get; set; } = true;
    }
}
