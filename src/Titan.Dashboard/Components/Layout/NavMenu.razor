@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Titan Dashboard</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="basetypes">
                <span class="bi bi-box-seam-nav-menu" aria-hidden="true"></span> Item Types
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="seasons">
                <span class="bi bi-calendar-nav-menu" aria-hidden="true"></span> Seasons
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="bi bi-people-nav-menu" aria-hidden="true"></span> Players
            </NavLink>
        </div>

        <AuthorizeView Policy="SuperAdmin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/users">
                        <span class="bi bi-shield-lock-nav-menu" aria-hidden="true"></span> Admin Users
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>
