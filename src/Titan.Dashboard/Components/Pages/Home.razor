@page "/"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "Viewer")]

<PageTitle>Dashboard - Titan Admin</PageTitle>

<div class="dashboard-container">
    <h1>⚔️ Titan Dashboard</h1>
    
    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-icon">📦</div>
            <h3>Item Types</h3>
            <p>Manage game item definitions</p>
            <a href="/itemtypes" class="btn btn-secondary">Manage</a>
        </div>

        <div class="dashboard-card">
            <div class="card-icon">🗓️</div>
            <h3>Seasons</h3>
            <p>Configure leagues and seasons</p>
            <a href="/seasons" class="btn btn-secondary">Manage</a>
        </div>

        <div class="dashboard-card">
            <div class="card-icon">👥</div>
            <h3>Players</h3>
            <p>Search and manage players</p>
            <a href="/players" class="btn btn-secondary">Manage</a>
        </div>

        <AuthorizeView Policy="SuperAdmin">
            <Authorized>
                <div class="dashboard-card admin-only">
                    <div class="card-icon">🔐</div>
                    <h3>Admin Users</h3>
                    <p>Manage dashboard access</p>
                    <a href="/admin/users" class="btn btn-secondary">Manage</a>
                </div>
                <div class="dashboard-card admin-only">
                    <div class="card-icon">⚡</div>
                    <h3>Rate Limiting</h3>
                    <p>Configure API throttling</p>
                    <a href="/rate-limiting" class="btn btn-secondary">Manage</a>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>

    <div class="dashboard-stats">
        <h2>System Status</h2>
        <p class="status-ok">✅ Orleans Cluster: Connected</p>
        <p class="status-ok">✅ Database: Connected</p>
    </div>
</div>
