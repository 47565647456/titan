{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Eos": {
    "ClientId": null,
    "IssuerPrefix": "https://api.epicgames.dev",
    "JwksUri": "https://api.epicgames.dev/auth/v1/oauth/jwks"
  },
  "Sentry": {
    "Dsn": null,
    "Environment": null,
    "TracesSampleRate": 0.1,
    "Debug": false
  },
  "Cors": {
    "AllowedOrigins": []
  },
  "Admin": {
    "DefaultEmail": null,
    "DefaultPassword": null,
    "DefaultDisplayName": null
  },
  "RateLimiting": {
    "Enabled": true,
    "RedisConnectionName": "rate-limiting",
    "ConfigCacheSeconds": 30,
    "DefaultPolicies": [
      { "Name": "Global", "Rules": ["100:60:300"] },
      { "Name": "Auth", "Rules": ["10:60:600", "30:300:1800"] },
      { "Name": "Trade", "Rules": ["60:60:120"] },
      { "Name": "Relaxed", "Rules": ["1000:60:60"] },
      { "Name": "Admin", "Rules": ["1000:60:120"] },
      { "Name": "AdminHub", "Rules": ["5000:60:60"] },
      { "Name": "GameHub", "Rules": ["200:60:180"] }
    ],
    "DefaultEndpointMappings": [
      { "Pattern": "/api/auth/*", "PolicyName": "Auth" },
      { "Pattern": "/api/admin/auth/*", "PolicyName": "Auth" },
      { "Pattern": "/api/admin/*", "PolicyName": "Admin" },
      { "Pattern": "/hub/admin-metrics/*", "PolicyName": "AdminHub" },
      { "Pattern": "/hub/trade/*", "PolicyName": "Trade" },
      { "Pattern": "/hub/account/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/auth/*", "PolicyName": "Auth" },
      { "Pattern": "/hub/character/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/inventory/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/base-type/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/season/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/broadcast/*", "PolicyName": "GameHub" },
      { "Pattern": "/hub/encryption/*", "PolicyName": "GameHub" }
    ],
    "DefaultPolicyName": "Global"
  },
  "Encryption": {
    "KeyRotationIntervalMinutes": 30,
    "MaxMessagesPerKey": 1000000,
    "ReplayWindowSeconds": 60,
    "KeyRotationGracePeriodSeconds": 30
  }
}
