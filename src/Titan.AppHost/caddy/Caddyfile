{
    email {$ACME_EMAIL}
    acme_ca {$ACME_CA}
}

{$DOMAIN} {
    tls {
        dns cloudflare {$CF_API_TOKEN}
    }
    # Block public access to internal alive endpoint (health is allowed for orchestrators)
    @internal_paths {
        path /alive
    }
    respond @internal_paths "Forbidden" 403

    reverse_proxy {$GATEWAY_URL}
}
